<header>
    <div class="container head" >
      <%
      if (user) { %>
<!--  <a href="/user/me" class="btn btn-primary" style="max-height: fit-content">Profile</a>-->
            <% if (currentPath === "/me") { %>
                <button onclick="goBack()" class="btn btn-primary">Back</button>
            <% } else { %>
                <a href="/user/me" class="btn btn-primary">Profile</a>
            <% } %>
            <form action="/user/logout" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-secondary">Logout</button>
            </form>
      <% } else { %>
              <a href="/user/login" class="btn btn-primary">Login</a>
              <a href="/user/signup" class="btn btn-secondary">Signup</a>
      <% } %>
    </div>
</header>
